{
 "head" : {
    "type" : "header",
    "description" : "Desklet Settings"
 },
 
 "source" : {
   "type": "combobox",
    "default" : "openweather",
    "description" : "Source",
    "options" : {
        "accuweather" : "accuweather",
        "yahooweather" : "yahooweather",
        "weather.com" : "weather.com",
        "openweather" : "openweather"
    },
     "tooltip" : "The source for weather report"
 },
 
 "stationID": {
    "type" : "entry",
    "default" : "TARGOVISTE",
    "description" : "Location:",
    "tooltip" : "Set your location here"
 },
 "units" : {
    "type": "combobox",
    "default" : "1",
    "description" : "Choose your measurement unit:",
    "options" : {
        "C" : "1",
        "F" : "0"
    },
    "tooltip" : "Measurement units to display weather information"
 },
 "no" : {
    "type": "combobox",
    "default" : "4",
    "description" : "Days for forcast:",
    "options" : {
        "3" : "4",
        "5" : "6"
    }
    
 },
 "zoom" : {
    "type": "combobox",
    "default" : "0.75",
    "description" : "Scale:",
    "options" : {
        "200%" : "2",
        "150%" : "1.5",
        "100%" : "1",
        "75%" : "0.75",
        "50%" : "0.5"
        
    },
    "tooltip" : "Change the size of the desklet"
 },
 "border" : {
    "type" : "checkbox",
    "default" : false,
    "description": "Border on/off:",
    "tooltip": "Check this to turn border on/off"
 },
 "bordercolor" : {
    "type" : "colorchooser",
    "default" : "white",
    "description" : "Border's color:",
    "indent": true,
    "dependency" : "border",
    "tooltip" : "Select border color"
 },
 "transparency" : {
    "type" : "scale",
    "default" : 0.5,
    "min" : 0.0,
    "max" : 1.0,
    "step" : 0.05,
    "description" : "Transparency:",
    "tooltip" : "Transparency"
 },
  "textcolor" : {
    "type": "colorchooser",
    "default" : "rgb(255,255,255)",
    "description" : "The text's color for the desklet:",
    "tooltip" : "Select text color"
 },
 "bgcolor" : {
    "type": "colorchooser",
    "default" : "rgb(0,0,0)",
    "description" : "The background color for the desklet:",
    "tooltip" : "Select background color"
 },
 "halignment" : {
    "type": "combobox",
    "default": 1,
    "description": "Horizontal Alignment",
    "options": {
    "left" : 1,
    "center" : 2,
    "right" : 3
     },
    "tooltip" : "Choose desklet alignment"
 },
  "valignment" : {
    "type": "combobox",
    "default": 1,
    "description": "Vertical Alignment",
    "options": {
    "top" : 1,
    "middle" : 2,
    "bottom" : 3
     },
    "tooltip" : "Choose desklet alignment"
 },
 "graphic" : {
    "type": "generic",
    "default" : false
 },
 "initial_width" : {
    "type": "generic",
    "default" : false
 },
 "initial_height" : {
    "type": "generic",
    "default" : false
 },
 "fix_x" : {
    "type": "generic",
    "default" : false
 },
 "fix_y" : {
    "type": "generic",
    "default" : false
 }
 
}
